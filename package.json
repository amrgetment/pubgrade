{
  "name": "flutter-pubgrade",
  "displayName": "Pubgrade",
  "description": "Manage packages: check updates, view changelogs, update with one click",
  "version": "1.6.0",
  "publisher": "KamranBekirov",
  "icon": "resources/icon.png",
  "author": {
    "name": "Kamran Bekirov"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kamranbekirovyz/pubgrade"
  },
  "keywords": [
    "flutter",
    "dart",
    "packages",
    "dependencies",
    "pubspec",
    "changelog"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/pubspec.yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flutter-pubgrade",
          "title": "pubgrade",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "flutter-pubgrade": [
        {
          "id": "pubgradePackages",
          "name": "Packages"
        }
      ]
    },
    "commands": [
      {
        "command": "pubgrade.refresh",
        "title": "Refresh Packages",
        "icon": "$(refresh)"
      },
      {
        "command": "pubgrade.updatePackage",
        "title": "Update Package"
      },
      {
        "command": "pubgrade.showChangelog",
        "title": "Show Changelog"
      },
      {
        "command": "pubgrade.ignorePackage",
        "title": "Ignore Package",
        "icon": "$(eye-closed)"
      },
      {
        "command": "pubgrade.unignorePackage",
        "title": "Unignore Package",
        "icon": "$(eye)"
      },
      {
        "command": "pubgrade.manageIgnoredPackages",
        "title": "Manage Ignored Packages",
        "icon": "$(list-selection)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "pubgrade.refresh",
          "when": "view == pubgradePackages",
          "group": "navigation"
        },
        {
          "command": "pubgrade.manageIgnoredPackages",
          "when": "view == pubgradePackages",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "pubgrade.ignorePackage",
          "when": "view == pubgradePackages && viewItem == outdatedPackage",
          "group": "inline"
        },
        {
          "command": "pubgrade.ignorePackage",
          "when": "view == pubgradePackages && viewItem == upToDatePackage",
          "group": "inline"
        },
        {
          "command": "pubgrade.unignorePackage",
          "when": "view == pubgradePackages && viewItem == ignoredPackage",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Pubgrade",
      "properties": {
        "pubgrade.ignoredPackages": {
          "type": "array",
          "description": "Packages that Pubgrade should ignore when suggesting updates.",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Package name"
              },
              "reason": {
                "type": "string",
                "description": "Optional reason for ignoring the package"
              }
            },
            "required": [
              "name"
            ]
          },
          "default": []
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.0.0",
    "@types/semver": "^7.5.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^3.6.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "js-yaml": "^4.1.0",
    "semver": "^7.5.0"
  }
}
