{
  "name": "flutter-pubgrade",
  "displayName": "Pubgrade",
  "description": "Manage packages: check updates, view changelogs, update with one click",
  "version": "1.7.3",
  "publisher": "KamranBekirov",
  "icon": "resources/icon.png",
  "author": {
    "name": "Kamran Bekirov"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kamranbekirovyz/pubgrade"
  },
  "keywords": [
    "flutter",
    "dart",
    "packages",
    "dependencies",
    "pubspec",
    "changelog"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/pubspec.yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flutter-pubgrade",
          "title": "pubgrade",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "flutter-pubgrade": [
        {
          "id": "pubgradePackages",
          "name": "Packages",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "pubgrade.refresh",
        "title": "Refresh Packages",
        "icon": "$(refresh)"
      },
      {
        "command": "pubgrade.toggleHideUpToDatePackages",
        "title": "Toggle Hide Up-to-date Packages",
        "icon": "$(filter)"
      },
      {
        "command": "pubgrade.ignorePubspec",
        "title": "Ignore Pubspec",
        "icon": "$(circle-slash)"
      },
      {
        "command": "pubgrade.updatePackage",
        "title": "Update Package",
        "icon": "$(cloud-download)"
      },
      {
        "command": "pubgrade.showChangelog",
        "title": "Show Changelog",
        "icon": "$(book)"
      },
      {
        "command": "pubgrade.ignorePackage",
        "title": "Ignore Package",
        "icon": "$(eye-closed)"
      },
      {
        "command": "pubgrade.unignorePackage",
        "title": "Unignore Package",
        "icon": "$(eye)"
      },
      {
        "command": "pubgrade.manageIgnoredPackages",
        "title": "Manage Ignored Packages",
        "icon": "$(list-selection)"
      },
      {
        "command": "pubgrade.manageIgnoredPubspecs",
        "title": "Manage Ignored Pubspecs",
        "icon": "$(file-directory)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "pubgrade.refresh",
          "when": "view == pubgradePackages",
          "group": "navigation"
        },
        {
          "command": "pubgrade.toggleHideUpToDatePackages",
          "when": "view == pubgradePackages",
          "group": "navigation@0"
        },
        {
          "command": "pubgrade.ignorePubspec",
          "when": "view == pubgradePackages",
          "group": "navigation@1"
        },
        {
          "command": "pubgrade.manageIgnoredPackages",
          "when": "view == pubgradePackages",
          "group": "navigation@2"
        },
        {
          "command": "pubgrade.manageIgnoredPubspecs",
          "when": "view == pubgradePackages",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "pubgrade.ignorePubspec",
          "when": "view == pubgradePackages && viewItem == pubspecGroup",
          "group": "navigation"
        },
        {
          "command": "pubgrade.ignorePackage",
          "when": "view == pubgradePackages && viewItem == outdatedPackage",
          "group": "inline"
        },
        {
          "command": "pubgrade.ignorePackage",
          "when": "view == pubgradePackages && viewItem == upToDatePackage",
          "group": "inline"
        },
        {
          "command": "pubgrade.unignorePackage",
          "when": "view == pubgradePackages && viewItem == ignoredPackage",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Pubgrade",
      "properties": {
        "pubgrade.hideUpToDatePackages": {
          "type": "boolean",
          "default": true,
          "description": "Hide packages that are already up to date and focus on updates. Ignored outdated updates remain visible."
        },
        "pubgrade.scanAllPubspecs": {
          "type": "boolean",
          "default": false,
          "description": "Scan all pubspec.yaml files in the workspace (monorepo). When disabled, only the workspace root pubspec.yaml is used."
        },
        "pubgrade.treatAnyAsUpToDate": {
          "type": "boolean",
          "default": true,
          "description": "Treat dependencies declared with version constraint 'any' (e.g., 'intl: any') as up to date. This avoids showing them as always-outdated and prevents accidental updates from 'any' to a pinned version."
        },
        "pubgrade.ignoredPubspecs": {
          "type": "array",
          "default": [],
          "description": "Relative paths of pubspec.yaml files to hide from Pubgrade when scanning all pubspecs (monorepo).",
          "items": {
            "type": "string"
          }
        },
        "pubgrade.ignoredPackages": {
          "type": "array",
          "description": "Packages that Pubgrade should ignore when suggesting updates.",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Package name"
              },
              "reason": {
                "type": "string",
                "description": "Optional reason for ignoring the package"
              }
            },
            "required": [
              "name"
            ]
          },
          "default": []
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node --test \"out/**/*.test.js\""
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.0.0",
    "@types/semver": "^7.5.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^3.6.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "js-yaml": "^4.1.0",
    "semver": "^7.5.0"
  }
}
